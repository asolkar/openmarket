<% provide(:title, 'Shop List') %>
<% content_for :page_heading do %>
  <% if @user %>
  <%= image_tag(@user.avatar.tiny.url, :class => 'img-polaroid') %> <%= @user.fullname %>'s Shops
  <% else %>
    All Shops
  <% end %>
<% end %>

<%= render 'shop_list' %>

<%= link_to 'New Shop', new_shop_path, :class => 'btn btn-primary' %>
