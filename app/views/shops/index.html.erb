<h1>Listing shops</h1>

<table>
  <tr>
    <th>Created at</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.created_at %></td>
    <td><%= shop.name %></td>
    <td><%= shop.user.fullname %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

