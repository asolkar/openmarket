<%= form_tag sessions_path do %>
  <dl class="dl-horizontal field">
    <dt><%= label_tag :username %></dt>
    <dd><%= text_field_tag :username, params[:username] %></dd>
  </dl>
  <dl class="dl-horizontal field">
    <dt><%= label_tag :password %></dt>
    <dd><%= password_field_tag :password %></dd>
  </dl>
  <dl class="dl-horizontal actions">
    <dt><%= submit_tag "Log in", :class => "btn btn-primary" %></dt>
    <dd><%= link_to "Cancel", root_path, :class => "btn" %></dd>
  </dl>
<% end %>
