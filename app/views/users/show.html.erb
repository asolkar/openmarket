<% provide(:title, 'User Info - ' + "#{@user.fullname}") %>
<% provide(:page_heading, "#{@user.fullname}") %>

<div class="row">
  <div class="span4">
    <div class="muted">Member Since <%= @user.created_at.to_s(:member_since) %></div>
  </div><!-- /.span4 -->
  <div class="span8">
    <h2>Shops</h2>
    <%= paginate @shops %>
    <table class="table">
    <tr><th>Name</th><th>Description</th><th>Actions</th></tr>
    <%= render @shops %>
    </table>
  </div><!-- /.span8 -->
</div><!-- /.row -->

<%= link_to 'Edit', edit_user_path(@user), :class => 'btn' %>
