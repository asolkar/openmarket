<!--

Application page layout

  _header : Contains navigation bar
  _footer : Contains copyright info
-->
<% provide(:app_name, 'OpenMarket') %>
<% provide(:app_author, 'Mahesh Asolkar') %>
<% provide(:copy_year, '2012') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= yield(:app_name) %> | <%= yield(:title) %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="OpenMarket page">
  <meta name="author" content="OpenMarket">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>

    <%= yield %>
    <%= render 'layouts/footer' %>
</body>
</html>
