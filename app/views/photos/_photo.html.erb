<%= div_for photo do %>
  <tr>
    <td><%= link_to item_photo_path(photo.item, photo) do %>
      <%= image_tag(photo.image.thumb.url, :class => 'img-polaroid') %>
    <% end %>
    </td>
    <td><%= photo.caption %></td>
    <td>
      <%= link_to item_photo_path(photo.item, photo),
                  :rel => 'tooltip',
                  :title => 'Share Item' do %>
        <i class="icon-share"></i>
      <% end %>
      <% if photo.item.shop.user == current_user %>
        <%= link_to edit_item_photo_path(photo.item, photo),
                    :rel => 'tooltip',
                    :title => 'Edit Photo' do %>
          <i class="icon-edit"></i>
        <% end %>
        <%= link_to item_photo_path(photo.item, photo),
                    :confirm => 'Are you sure you want to delete this photo?',
                    :method => :delete,
                    :rel => 'tooltip',
                    :title => 'Delete Photo' do %>
          <i class="icon-remove"></i>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
